<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<StackPane prefHeight="705.0" prefWidth="1209.0" stylesheets="@./employeelist.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vn.hust.bookstore.controller.EmployeeListController">
    <children>
        <AnchorPane prefHeight="704.0" prefWidth="1190.0">
            <children>
                <!-- Header -->
                <Label layoutX="20.0" layoutY="20.0" style="-fx-font-size: 24px;" text="Danh sách nhân viên" />
                <Button fx:id="btnClose" layoutX="1145.0" layoutY="20.0" onAction="#closeWindow" prefHeight="30.0" prefWidth="39.0" styleClass="close-button" text="X" />

                <!-- TableView -->
                <TableView fx:id="tableEmployee" layoutX="20.0" layoutY="70.0" prefHeight="607.0" prefWidth="1164.0">
                    <columns>
                        <TableColumn fx:id="colLastName" prefWidth="92.0" text="Họ">
                            <cellValueFactory>
                                <PropertyValueFactory property="lastName" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colFirstName" prefWidth="116.0" text="Tên">
                            <cellValueFactory>
                                <PropertyValueFactory property="firstName" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colBirthDate" prefWidth="115.0" text="Ngày sinh">
                            <cellValueFactory>
                                <PropertyValueFactory property="birthDate" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colGender" prefWidth="79.0" text="Giới tính">
                            <cellValueFactory>
                                <PropertyValueFactory property="gender" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colEmail" prefWidth="218.0" text="Email">
                            <cellValueFactory>
                                <PropertyValueFactory property="email" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colPhone" prefWidth="144.0" text="Số điện thoại">
                            <cellValueFactory>
                                <PropertyValueFactory property="phoneNumber" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colRole" prefWidth="116.0" text="Chức vụ">
                            <cellValueFactory>
                                <PropertyValueFactory property="role" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colHourlyWage" prefWidth="174.0" text="Lương theo giờ">
                            <cellValueFactory>
                                <PropertyValueFactory property="hourlyWage" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colStatus" prefWidth="108.0" text="Trạng thái">
                            <cellValueFactory>
                                <PropertyValueFactory property="status" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </children>
        </AnchorPane>
    </children>
</StackPane>
