<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<StackPane prefHeight="304.0" prefWidth="600.0" stylesheets="@./importstock.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vn.hust.bookstore.controller.ImportStockController">
    <children>
        <AnchorPane prefHeight="400.0" prefWidth="600.0">
            <children>
                <!-- Header Section -->
                <Label layoutX="20.0" layoutY="20.0" style="-fx-font-size: 24px;" text="Nhập hàng vào kho" />

                <!-- Close and Minimize Buttons -->
                <Button fx:id="btnClose" layoutX="560.0" layoutY="10.0" mnemonicParsing="false" onAction="#closeWindow" textAlignment="JUSTIFY">
                    <graphic>
                        <FontAwesomeIcon glyphName="CLOSE" size="1.5em" />
                    </graphic>
                </Button>
                <Button fx:id="btnMinimize" layoutX="520.0" layoutY="10.0" mnemonicParsing="false" onAction="#minimizeWindow" textAlignment="JUSTIFY">
                    <graphic>
                        <FontAwesomeIcon glyphName="MINUS" size="1.5em" />
                    </graphic>
                </Button>

                <!-- Product Selection -->
                <Label layoutX="20.0" layoutY="80.0" text="Tên sản phẩm:" />
                <ComboBox fx:id="cbProductName" layoutX="176.0" layoutY="70.0" prefHeight="30.0" prefWidth="400.0" promptText="Chọn sản phẩm">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <!-- Sẽ load danh sách sản phẩm từ controller -->
                        </FXCollections>
                    </items>
                </ComboBox>

                <!-- Current Quantity -->
                <Label layoutX="20.0" layoutY="130.0" text="Số lượng hiện tại:" />
                <Label fx:id="lblCurrentQuantity" layoutX="176.0" layoutY="130.0" style="-fx-font-weight: bold;" text="0" />

                <!-- Quantity to Add -->
                <Label layoutX="20.0" layoutY="180.0" text="Số lượng nhập thêm:" />
                <TextField fx:id="tfAddQuantity" layoutX="176.0" layoutY="174.0" prefHeight="30.0" prefWidth="400.0" promptText="Nhập số lượng cần thêm" />

                <!-- Submit Button -->
                <Button fx:id="btnSubmit" layoutX="451.0" layoutY="238.0" mnemonicParsing="false" onAction="#handleSubmit" styleClass="action-button" text="Nhập hàng" />
            </children>
        </AnchorPane>
    </children>
</StackPane>
